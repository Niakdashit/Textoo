{
  "manifest_version": 3,
  "name": "Help me write",
  "version": "0.1.0",
  "description": "Bouton flottant dans les composeurs dâ€™emails (Gmail, etc.)",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Help me write"
  },
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://*.yahoo.*/*",
        "https://*.proton.me/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
