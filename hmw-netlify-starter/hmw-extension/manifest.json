{
  "manifest_version": 3,
  "name": "Help Me Write (HMW)",
  "version": "1.0.0",
  "description": "Bouton toujours visible dans les composeurs dâ€™emails pour ouvrir HMW.",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "Help Me Write",
    "default_popup": "options.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://outlook.live.com/*",
        "https://outlook.office.com/*",
        "https://mail.yahoo.com/*",
        "https://*.proton.me/*",
        "https://*.fastmail.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
